{
  "rules": [
    {
      "name": "filename-pattern-in-folder",
      "patterns": [
        "*.ts"
      ],
      "folder": "source/services"
    },
    {
      "name": "folder-name-in-folder",
      "names": [
        "services",
        "pages",
        "configs"
      ],
      "folder": "source"
    },
    {
      "name": "max-files-in-folder",
      "quantity": 0,
      "folder": "source"
    },
    {
      "name": "max-folders-in-folder",
      "quantity": 1,
      "folder": "source/services"
    },
    {
      "name": "filename-size-in-folder",
      "min": 3,
      "max": 10,
      "folder": "source"
    }
  ]
}