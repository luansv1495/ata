{
  "name": "xulin",
  "version": "0.0.8",
  "description": "Architecture test automation",
  "author": "Luan Viana",
  "license": "MIT",
  "keywords": [
    "architectury",
    "test",
    "automation"
  ],
  "repository": "https://github.com/luansv1495/xulin",
  "files": [
    "bin",
    "lib",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "main": "./lib/index.js",
  "bin": {
    "xulin": "bin/xulin"
  },
  "scripts": {
    "start": "npm run build && npm run global",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && cd fixtures/example && xulin .",
    "clean:some": "rimraf -rf ./lib",
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "jest",
    "test:arch": "node ./bin/xulin .",
    "test:typecheck": "tsc --noEmit",
    "build:prod": "npm run clean:some && tsc -p . --sourceMap false",
    "publish:npm": "npm run build:prod && npm publish --access=public"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "kleur": "^4.1.5",
    "moment": "^2.29.4"
  }
}
